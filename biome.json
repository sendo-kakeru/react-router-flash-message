{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**"]
	},
	"formatter": { "enabled": true, "indentStyle": "tab" },
	"assist": {
		"actions": {
			"source": { "organizeImports": "on", "useSortedAttributes": "on" }
		}
	},
	"linter": {
		"enabled": true,
		"rules": { "recommended": true }
	},
	"javascript": { "formatter": { "quoteStyle": "double" } }
}
